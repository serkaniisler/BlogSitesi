@{
    ViewData["Title"] = "Main";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: #121212;
        color: #f1f1f1;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .card-dark {
        background-color: #1e1e1e;
        border: 1px solid #2e2e2e;
        border-radius: 12px;
        box-shadow: 0 4px 15px rgba(0, 255, 255, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card-dark:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 25px rgba(0, 255, 255, 0.2);
        }

    .card-title {
        color: #00ffff;
    }

    .card-subtitle {
        color: #cccccc;
    }

    .post-meta a {
        color: #1e90ff;
        text-decoration: none;
    }

        .post-meta a:hover {
            text-decoration: underline;
        }

    .btn-outline-secondary {
        color: #00ffff;
        border-color: #00ffff;
    }

        .btn-outline-secondary:hover {
            background-color: #00ffff;
            color: #121212;
        }

    /* Footer düzeltmesi */
    footer {
        background-color: #1a1a1a !important;
        color: #ffffff !important;
    }

        footer a {
            color: #00ffff !important;
        }

            footer a:hover {
                text-decoration: underline;
            }
</style>




<div class="container-fluid px-5 py-4">
    @* Geniş container için container-fluid ve px-5 eklendi *@
    <div class="row justify-content-center">
        <div class="col-xl-10 col-lg-10 col-md-11">
            @* Genişletilmiş kolon *@

            @* Post Cards *@
            @{
                var posts = new[]
                {
            new { Title = "Man must explore, and this is exploration at its greatest", Subtitle = "Problems look mighty small from 150 miles up", Date = "September 24, 2014" },
            new { Title = "I believe every human has a finite number of heartbeats. I don't intend to waste any of mine.", Subtitle = "", Date = "September 18, 2014" },
            new { Title = "Science has not yet mastered prophecy", Subtitle = "We predict too much for the next year and yet far too little for the next ten.", Date = "August 24, 2014" },
            new { Title = "Failure is not an option", Subtitle = "Many say exploration is part of our destiny, but it’s actually our duty to future generations.", Date = "July 8, 2014" }
            };
            }
            @foreach (var post in posts)
            {
                <div class="card card-dark mb-4 p-4">
                    <a href="/Articlesdetays/Index" class="text-decoration-none">
                        <h4 class="card-title">@post.Title</h4>
                        @if (!string.IsNullOrEmpty(post.Subtitle))
                        {
                            <h6 class="card-subtitle mb-2">@post.Subtitle</h6>
                        }
                    </a>
                    <p class="post-meta mt-3">Posted by <a href="/Authors/Index">Serkan İşler</a> on @post.Date</p>
                </div>
            }

            <!-- Pager -->
            <nav class="d-flex justify-content-end mt-4">
                <a href="#" class="btn btn-outline-secondary">Older Posts &rarr;</a>
            </nav>

        </div>
    </div>
</div>

<!-- Scripts -->
<script src="~/Articles/vendor/jquery/jquery.min.js"></script>
<script src="~/Articles/vendor/bootstrap/js/bootstrap.min.js"></script>
<script src="~/Articles/js/jqBootstrapValidation.js"></script>
